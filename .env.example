q# Environment Variables Example
# Copy this file to .env and fill in your actual values

# --- GCP / Cloud Run ---
GCP_PROJECT=your-project-id
CLOUD_RUN_REGION=asia-south1
CLOUD_SQL_CONNECTION_NAME=your-project:region:instance-name
CLOUD_RUN=False  # Set to True when running on Cloud Run

# --- Cloud SQL / Postgres ---
DB_NAME=your_database_name
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_HOST=/cloudsql/$(CLOUD_SQL_CONNECTION_NAME)  # For Cloud Run, or localhost for local
DB_PORT=5432

# --- Google Cloud Storage ---
GS_BUCKET_NAME=your-bucket-name
GS_CREDENTIALS_JSON=/path/to/credentials.json  # Optional if using service account

# --- Django / Wagtail ---
DJANGO_SETTINGS_MODULE=prabuddh_me.settings.dev  # or .production
DEBUG=True  # Set False in production
SECRET_KEY=your-super-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
WAGTAILADMIN_BASE_URL=https://your-domain.com

# --- Email Configuration (Optional) ---
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# --- Local Development Options ---
USE_CLOUD_SQL_PROXY=False  # Set True to use Cloud SQL Proxy locally

# --- Django Superuser (for automated creation) ---
SUPERUSER_NAME=admin
SUPERUSER_EMAIL=admin@example.com
SUPERUSER_PASSWORD=changeme123

# --- Third-party Services ---
AKISMET_API_KEY=your-akismet-key
AKISMET_BLOG_URL=https://your-blog-url.com