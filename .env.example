# Django Core
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
DJANGO_SETTINGS_MODULE=prabuddh_me.settings.production

# Database (Docker Compose)
DB_NAME=prabuddh_me_db
DB_USER=prabuddh_me_db_user
DB_PASSWORD=change_this_password
DB_HOST=db
DB_PORT=5432

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your.server.ip
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Wagtail
WAGTAILADMIN_BASE_URL=https://yourdomain.com

# Storage (leave empty for local filesystem, or add GCS bucket name)
GS_BUCKET_NAME=

# Optional: GCP Project (only if using GCS)
GCP_PROJECT=

# Superuser Auto-Creation (optional)
SUPERUSER_NAME=admin
SUPERUSER_EMAIL=admin@example.com
SUPERUSER_PASSWORD=changeme123